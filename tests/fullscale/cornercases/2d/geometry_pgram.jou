# ----------------------------------------------------------------------
# Set units to SI.
# ----------------------------------------------------------------------
${Units('si')}

# ----------------------------------------------------------------------
# Reset geometry.
# ----------------------------------------------------------------------
reset

# ----------------------------------------------------------------------
# Create parallelogram
# ----------------------------------------------------------------------
${dx=2.0*km}
${xmin=-4.0*km}
${xmax=4.0*km}
${ymin=-4.0*km}
${ymax=4.0*km}

create vertex {xmin+dx} {ymax} 0
create vertex {xmin} {ymin} 0
create vertex {xmax} {ymin} 0

create surface parallelogram vertex 1 2 3
