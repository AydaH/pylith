# ----------------------------------------------------------------------
# Generate geometry
# ----------------------------------------------------------------------
playback 'geometry_cylinder.jou'

# ----------------------------------------------------------------------
# Set discretization size
# ----------------------------------------------------------------------
${dx=2.0*km}
surface all size {dx}

# ----------------------------------------------------------------------
# Generate the mesh
# ----------------------------------------------------------------------
surface all scheme map
mesh surface all

playback 'createbc_cylinder.jou'

# ----------------------------------------------------------------------
# Export exodus file
# ----------------------------------------------------------------------
export mesh "mesh_cylinder_quad.exo" dimension 2 overwrite



