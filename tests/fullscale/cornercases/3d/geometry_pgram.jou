# ----------------------------------------------------------------------
# Set units to SI.
# ----------------------------------------------------------------------
${Units('si')}

# ----------------------------------------------------------------------
# Reset geometry.
# ----------------------------------------------------------------------
reset

# ----------------------------------------------------------------------
# Create parallelogram
# ----------------------------------------------------------------------
${dx=2.0*km}
${xmin=-4.0*km}
${xmax=4.0*km}
${ymin=-4.0*km}
${ymax=4.0*km}
${zmin=-8.0*km}
${zmax=0.0*km}
${dy=ymax-ymin}

create vertex {xmin+dx} {ymin} {zmax}
create vertex {xmin} {ymin} {zmin}
create vertex {xmax} {ymin} {zmin}

create surface parallelogram vertex 1 2 3
sweep surface 1 vector 0 {dy} 0


