# ----------------------------------------------------------------------
# Generate geometry
# ----------------------------------------------------------------------
playback 'geometry_cylinder.jou'

# ----------------------------------------------------------------------
# Set discretization size
# ----------------------------------------------------------------------
${dx=1.5*km}
volume all size {dx}

# ----------------------------------------------------------------------
# Generate the mesh
# ----------------------------------------------------------------------
volume all scheme map
mesh volume all

playback 'bc_cylinder.jou'

# ----------------------------------------------------------------------
# Export exodus file
# ----------------------------------------------------------------------
export mesh "mesh_cylinder_hex.exo" dimension 3 overwrite


