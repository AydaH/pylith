# ----------------------------------------------------------------------
# Generate geometry
# ----------------------------------------------------------------------
playback 'geometry_pgram.jou'

# ----------------------------------------------------------------------
# Set discretization size
# ----------------------------------------------------------------------
${dx=4.0*km}
volume all size {dx}

# ----------------------------------------------------------------------
# Generate the mesh
# ----------------------------------------------------------------------
volume all scheme map
mesh volume all

playback 'createbc_pgram.jou'

# ----------------------------------------------------------------------
# Export exodus file
# ----------------------------------------------------------------------
export mesh "mesh_pgram_hex.exo" dimension 3 overwrite


