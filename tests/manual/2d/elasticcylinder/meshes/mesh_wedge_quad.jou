# ----------------------------------------------------------------------
# Generate geometry
# ----------------------------------------------------------------------
playback 'geometry_wedge.jou'

# ----------------------------------------------------------------------
# Set discretization size and mesh surface
# ----------------------------------------------------------------------
surface 34 scheme pave
${dxMax=1.0*km}
surface 34 size {dxMax}
mesh surface 34

# ----------------------------------------------------------------------
# Generate boundary conditions
# ----------------------------------------------------------------------
playback 'bc_wedge.jou'

# ----------------------------------------------------------------------
# Export exodus file
# ----------------------------------------------------------------------
export mesh "mesh_wedge_quad.exo" dimension 2 overwrite

