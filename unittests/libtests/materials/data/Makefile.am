dist_noinst_DATA = \
	matinitialize.spatialdb \
	matstress.spatialdb \
	matstrain.spatialdb \
	tri_onecell.mesh \
	tri_fourcells.mesh \
	tri_small.mesh \
	quad_onecell.mesh \
	quad_fourcells.mesh \
	quad_small.mesh \
	quad_aligned.mesh \
	mat_elastic.spatialdb

noinst_DATA = \
        $(builddir)/IsotropicLinearMaxwellPlaneStrain_VarStrain_aux.spatialdb \
        $(builddir)/IsotropicLinearMaxwellPlaneStrain_VarStrain_soln.spatialdb \
        $(builddir)/IsotropicLinearMaxwellPlaneStrain_VarStrain_pert.spatialdb

noinst_TMP =

# 'export' the input files by performing a mock install
export_datadir = $(top_builddir)/unittests/libtests/materials/data
export-data: $(dist_noinst_DATA)
	if [ "X$(top_srcdir)" != "X$(top_builddir)" ]; then for f in $(dist_noinst_DATA); do $(install_sh_DATA) $(srcdir)/$$f $(export_datadir); done; fi

clean-data:
	if [ "X$(top_srcdir)" != "X$(top_builddir)" ]; then for f in $(dist_noinst_DATA) $(noinst_TMP); do $(RM) $(RM_FLAGS) $(export_datadir)/$$f; done; fi

BUILT_SOURCES = export-data
clean-local: clean-data


$(builddir)/IsotropicLinearMaxwellPlaneStrain_VarStrain_soln.spatialdb \
$(builddir)/IsotropicLinearMaxwellPlaneStrain_VarStrain_pert.spatialdb \
$(builddir)/IsotropicLinearMaxwellPlaneStrain_VarStrain_aux.spatialdb: IsotropicLinearMaxwellPlaneStrain_VarStrain.py
	$(PYTHON) $(srcdir)/IsotropicLinearMaxwellPlaneStrain_VarStrain.py

